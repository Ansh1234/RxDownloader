<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:layout_marginTop="@dimen/image_margin"
    android:layout_marginRight="@dimen/image_margin"
    android:layout_marginLeft="@dimen/image_margin"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon_item_cover"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:scaleType="fitXY"
            android:src="@drawable/icon" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_item_cover"
            android:layout_marginLeft="@dimen/item_detail_text_marginLeft"
            android:layout_marginTop="@dimen/item_detail_text_marginTop"
            android:textSize="@dimen/image_name_text_size" />

        <com.example.anshul.rxdownloader.SongDownloaderIconView
            android:id="@+id/icon_image_download"
            android:layout_width="@dimen/icon_image_download_width"
            android:layout_height="@dimen/icon_image_download_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/icon_image_not_downloaded" />

    </RelativeLayout>

</android.support.v7.widget.CardView>