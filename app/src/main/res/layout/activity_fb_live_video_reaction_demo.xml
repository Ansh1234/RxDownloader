<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.anshul.rxdownloader.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/emoticons_view"
        android:background="@drawable/background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/like_emoticon_flow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:src="@drawable/like" />

        <ImageView
            android:id="@+id/love_emoticon_flow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:src="@drawable/love" />

        <ImageView
            android:id="@+id/haha_emoticon_flow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:src="@drawable/haha" />

        <ImageView
            android:id="@+id/wow_emoticon_flow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:src="@drawable/wow" />

        <ImageView
            android:id="@+id/sad_emoticon_flow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:src="@drawable/sad" />

        <ImageView
            android:id="@+id/angry_emoticon_flow"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:src="@drawable/angry" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/emoticons_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/like_emoticon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/like" />

        <ImageView
            android:id="@+id/love_emoticon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/love" />

        <ImageView
            android:id="@+id/haha_emoticon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/haha" />

        <ImageView
            android:id="@+id/wow_emoticon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/wow" />

        <ImageView
            android:id="@+id/sad_emoticon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/sad" />

        <ImageView
            android:id="@+id/angry_emoticon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/angry" />
    </LinearLayout>

</RelativeLayout>
